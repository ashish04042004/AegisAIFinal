<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme for AegisAI. It inherits from the base DayNight theme. -->
    <style name="Theme.AegisAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Adjust as needed -->

        <!-- Crucial for text and surfaces -->
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:textColorHint">@color/md_theme_text_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#0D1B2A</item> <!-- Darkest part of the gradient -->
    </style>
</resources>